h1 Listing #{@store.name} products

table
  thead
    tr
      th Name
      th Cost
      th Description
      th
      th
      th

  tbody
    - @products.each do |product|
      tr
        td = product.name
        td = product.cost.format
        td = product.description
        td = link_to 'Show', [:admin, product]
        td = link_to 'Edit', edit_admin_product_path(product)
        td = link_to 'Destroy', [:admin, product], data: { confirm: 'Are you sure?' }, method: :delete

br

